<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appender for logs/operateur.log -->
    <appender name="OPERATEUR_FILE" class="ch.qos.logback.core.FileAppender">
        <file>/app/logs/operateur.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %logger{36} - %level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender (useful in dev) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %logger{36} - %level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Custom logger for OperateurServiceImpl -->
    <logger name="tn.esprit.rh.achat.services.OperateurServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="OPERATEUR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root logger for other classes -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
